<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@drawable/rz_104"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/nomjeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"

        android:textColor="#FFFFFF"
        android:gravity="center"


        android:layout_alignLeft="@+id/buttonparam"
        android:layout_alignRight="@+id/buttonparam"

        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/nouvellepartie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Jouer"
        android:background="@drawable/bouton"

        android:layout_above="@+id/tutoriel"
        android:layout_alignLeft="@+id/buttonparam"
        android:layout_alignRight="@+id/buttonparam"
        />


    <Button
        android:id="@+id/tutoriel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tutoriel"
        android:layout_above="@+id/defis"

        android:layout_alignLeft="@+id/buttonparam"
        android:layout_alignRight="@+id/buttonparam"
        android:background="@drawable/bouton"
        android:layout_marginTop="30dip"

        />

    <Button
        android:id="@+id/defis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Défis"

        android:layout_above="@+id/buttonparam"
        android:layout_alignLeft="@+id/buttonparam"
        android:layout_alignRight="@+id/buttonparam"
        android:background="@drawable/bouton"
        android:layout_marginTop="30dip"

        />

    <Button
        android:id="@+id/buttonparam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Paramètres"
        android:background="@drawable/bouton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="30dip"
        />

</RelativeLayout>